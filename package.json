{
  "name": "react-native-common",
  "version": "2.4.0",
  "description": "UI Toolset & Components and API Library for React Native with Independent RTL support.",
  "main": "src/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "start": "watchman watch-del-all && react-native start",
    "ios": "react-native run-ios --simulator='iPhone 8'",
    "android": "react-native run-android",
    "pretest": "npm run lint",
    "lint": "eslint src -c .eslintrc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:ts": "rm -rf dist-ts && ./scripts/build-ts.sh",
    "build:typings": "rm -rf ./typings && ./scripts/build-typings.sh && tsc"
  },
  "files": [
    "android/",
    "ios/",
    "src/",
    "typings/",
    "LICENSE",
    "README.md",
    "RNCommon.podspec"
  ],
  "keyword": [
    "react",
    "react-native",
    "react-native-common",
    "components",
    "animation",
    "colors",
    "extensions",
    "forms",
    "icons",
    "modals",
    "images",
    "layout",
    "rendering",
    "styling",
    "transformers",
    "ios",
    "android"
  ],
  "author": {
    "name": "Reza Ghorbani",
    "email": "r.ghorbani.f@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rghorbani/react-native-common/issues"
  },
  "dependencies": {
    "create-react-class": "~15.6.3",
    "fbjs": "~0.8.17",
    "hoist-non-react-statics": "^2.5.5",
    "immutable": "~3.8.2",
    "lodash": "^4.17.11",
    "prop-types": "~15.6.2",
    "react-native-keyboard-aware-scrollview": "^2.0.0",
    "react-native-ui-lib": "~3.9.1",
    "react-timer-mixin": "~0.13.4",
    "rebound": "~0.1.0",
    "url-parse": "^1.4.3"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-eslint": "~8.2.1",
    "babel-jest": "~22.4.3",
    "babel-preset-react": "~6.24.1",
    "babel-preset-react-native": "~4.0.0",
    "eslint": "~4.16.0",
    "eslint-plugin-react": "~7.7.0",
    "eslint-plugin-react-native": "~3.2.1",
    "jest": "~22.4.3",
    "metro-react-native-babel-preset": "^0.48.1",
    "prettier": "~1.5.3",
    "react": "16.6.0-alpha.8af6728",
    "react-native": "0.57.3",
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "prettier": {
    "requirePragma": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "parser": "flow"
  },
  "jest": {
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "src/components/navigator",
      "/e2e/",
      "/node_modules/",
      "/typings/"
    ],
    "setupFiles": [
      "./jest-setup.js"
    ]
  },
  "rnpm": {
    "android": {
      "packageImportPath": "import com.kajoo.reactnativecommon.textinput.*;",
      "packageInstance": "new TextInputDelKeyHandlerPackage()"
    },
    "ios": {
      "project": "ios/RNCommon.xcodeproj"
    }
  },
  "homepage": "https://github.com/rghorbani/react-native-common",
  "contributors": [
    {
      "name": "rghorbani",
      "email": "r.ghorbani.f@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rghorbani/react-native-common"
  }
}
